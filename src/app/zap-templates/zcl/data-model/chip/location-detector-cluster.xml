<configurator>
  <domain name="CHIP"/>

  <cluster>
    <name>Location Detector</name>
    <domain>General</domain>
    <code>0xFFF1FC01</code>
    <define>LOCATION_DETECTOR_CLUSTER</define>
    <description>Attributes and commands for Location Detector Cluster</description>

    <attribute side="server" code="0x0000" define="BeaconUUID"       type="char_string" length="36" default="00000000-0000-0000-0000-000000000000" writable="true">BeaconUUID</attribute>
    <attribute side="server" code="0x0001" define="Distance"  type="int16u"                  default="0"            writable="true">Distance</attribute>
    <attribute side="server" code="0x0002" define="MediatorUID"  type="char_string" length="20" default="blescanner-000000" writable="true">MediatorUID</attribute>
    <attribute side="server" code="0x0003" define="LogEntry"  type="char_string" length="70" default="00000000-0000-0000-0000-000000000000000:00000:00000:blescanner-000000" writable="true">LogEntry</attribute>
  </cluster>
</configurator>
